        <item name="android:actionBarStyle">@style/customerActionStyle</item>
        <!--<item name="android:actionBarTabStyle">@style/customerActionTabStyle</item>-->
    </style>






    <!--自定义toolbar-->
    <style name="customerToolbarStyle" parent="Widget.AppCompat.Toolbar">



    </style>


    <!--actionbar 自定义style -->
    <style name="customerActionStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:displayOptions">showCustom</item>
        <item name="android:divider">?attr/dividerVertical</item>

        <item name="android:customNavigationLayout">@layout/test</item>
        <item name="android:titleTextStyle">@style/customerActionBarTitleTextStyle</item>
        <item name="android:subtitleTextStyle">?attr/titleTextStyle</item>
        <item name="android:background">@color/colorPrimary</item>
        <!--tab背景色 -->
        <item name="android:backgroundStacked">@color/colorPrimary</item>
        <item name="android:backgroundSplit">@color/colorPrimary</item>
        <item name="android:actionButtonStyle">@style/customerActionBarButtonStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/customerActionBarButtonStyle</item>
    </style>



    <style name="customerActionBarTitleTextStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#aaaaaa</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="CustomerTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">Customer Text</item>
        <item name="android:textColor">@android:color/holo_blue_bright</item>
        <item name="android:textSize">18sp</item>
    </style>



    <!--actionbar button 自定义style. -->
    <style name="customerActionBarButtonStyle">
        <item name="android:background">#ff0000</item>
        <item name="android:minWidth">@dimen/abc_action_button_min_width_material</item>
        <item name="android:minHeight">@dimen/abc_action_button_min_height_material</item>
        <item name="android:scaleType">center</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="textAllCaps">@bool/abc_config_actionMenuItemAllCaps</item>
    </style>






    <!--导航栏自定义style -->
    <style name="customerActionTabStyle">

    </style>
</resources>






